<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg_color"
    android:orientation="vertical">

   <include layout="@layout/toolback_with_back"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_bg_color"

            android:orientation="vertical">



            <RelativeLayout
                android:id="@+id/rel_product_img"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:background="@drawable/shop_bg"
                android:orientation="horizontal">



                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/product_name"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginStart="20sp"
                    android:textAllCaps="true"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="30sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Products"
                    android:layout_weight="4"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"

                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No of case"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
                    android:textColor="@color/black"

                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
                    android:textColor="@color/black"

                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
                    android:textColor="@color/black"

                    android:textSize="14sp"/>





            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_bg_color"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_margin="5dp"
                android:padding="5dp"
                xmlns:app="http://schemas.android.com/apk/res-auto">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_margin="2dp"
                    android:layout_weight="2.2"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:layout_margin="5dp"
                        android:text="Products"
                        android:layout_gravity="center"
                        android:gravity="center|start"/>






                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_margin="2dp"
                    android:layout_weight="2.6">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="11sp"

                       android:text="No. of Cases"
                        android:layout_gravity="center"
                        android:gravity="center"/>






                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_margin="2dp"
                    android:layout_weight="2.6"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:layout_margin="5dp"
                        android:text="Rate"
                        android:layout_gravity="center"
                        android:gravity="center|start"/>






                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_margin="2dp"
                    android:layout_weight="2.7"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:text="Amount"
                        android:layout_margin="5dp"

                        android:layout_gravity="center"
                        android:gravity="center"/>






                </LinearLayout>






            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_parent_packaged_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp"
                android:background="@color/grey_bg_color"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="8"
                android:layout_gravity="center|end"
                android:gravity="end">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center|end"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_margin="5dp"
                    android:layout_weight="5"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_margin="5dp"
                        android:text="Total"
                        android:layout_gravity="center"
                        android:gravity="center"/>






                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center|end"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="4"
                    >


                    <TextView
                        android:id="@+id/tv_total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginEnd="10sp"
                        android:layout_gravity="center"
                        android:gravity="center"/>






                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="8"
                android:layout_gravity="center|end"
                android:gravity="end">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center|end"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_margin="5dp"
                    android:layout_weight="5"
                    >


                    <TextView
                        android:id="@+id/tv_discount_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_margin="5dp"
                        android:text="Discount %"
                        android:layout_gravity="center"
                        android:gravity="center"/>






                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center|end"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="4"
                    >


                    <TextView
                        android:id="@+id/tv_discount_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginEnd="10sp"
                        android:layout_gravity="center"
                        android:gravity="center"/>






                </LinearLayout>


            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="8"
                    android:layout_gravity="center|end"
                    android:gravity="end">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center|end"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:layout_margin="5dp"
                        android:layout_weight="5"
                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_margin="5dp"
                            android:text="Taxable Value"
                            android:layout_gravity="center"
                            android:gravity="center|end"/>






                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center|end"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="4"
                        >


                        <TextView
                            android:id="@+id/tv_amt_after_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginEnd="10sp"
                            android:layout_gravity="center"
                            android:gravity="center"/>






                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="8"
                android:layout_gravity="center|end"
                android:gravity="end">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center|end"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_margin="5dp"
                    android:layout_weight="5"
                    >


                    <TextView
                        android:id="@+id/tv_cgst_per"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_margin="5dp"
                        android:text="CGST@ %"
                        android:layout_gravity="center"
                        android:gravity="center|start"/>






                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center|end"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="4"
                    >


                    <TextView
                        android:id="@+id/tv_cgst_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginEnd="10sp"
                        android:layout_gravity="center"
                        android:gravity="center"/>






                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="8"
                android:layout_gravity="center|end"
                android:gravity="end">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center|end"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_margin="5dp"
                    android:layout_weight="5"
                    >


                    <TextView
                        android:id="@+id/tv_sgst_per"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_margin="5dp"
                        android:text="SGST @ %"
                        android:layout_gravity="center"
                        android:gravity="center|start"/>






                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center|end"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="4"
                    >


                    <TextView
                        android:id="@+id/tv_sgst_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginEnd="10sp"
                        android:layout_gravity="center"
                        android:gravity="center"/>






                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="8"
                android:layout_gravity="center|end"
                android:gravity="end">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center|end"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_margin="5dp"
                    android:layout_weight="5"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red_close"
                        android:textSize="14sp"
                        android:layout_margin="5dp"
                        android:text="Grand Total"
                        android:layout_gravity="center"
                        android:gravity="center|start"/>






                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center|end"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="4"
                    >


                    <TextView
                        android:id="@+id/tv_nettotal_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginEnd="10sp"
                        android:layout_gravity="center"
                        android:gravity="center"/>






                </LinearLayout>




            </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/primary_green"
                android:textColor="@color/white"
                android:text="Place Order"
                android:padding="5dp"
                android:layout_margin="10sp"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>