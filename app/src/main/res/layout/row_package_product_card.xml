<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_bg_color"
    android:orientation="horizontal"
    android:weightSum="10"
    android:layout_margin="5dp"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_margin="2dp"
            android:layout_weight="2.2"
            >


            <TextView
                android:id="@+id/row_package_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center|start"/>

            <TextView
                android:id="@+id/row_package_item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center|start"/>





        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_margin="2dp"
        android:layout_weight="2.6">


        <EditText
            android:id="@+id/row_package_no_of_cases"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:maxLength="3"
            android:layout_gravity="center"
            android:gravity="center"/>






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_margin="2dp"
        android:layout_weight="2.6"
        >


        <TextView
            android:id="@+id/row_package_item_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:gravity="center|start"/>

        <TextView
            android:id="@+id/row_package_no_of_nos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:gravity="center|start"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_margin="2dp"
        android:layout_weight="2.6"
        >


        <TextView
            android:id="@+id/row_package_item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:gravity="center"/>






    </LinearLayout>






</LinearLayout>