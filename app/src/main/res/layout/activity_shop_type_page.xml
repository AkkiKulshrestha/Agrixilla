<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg_color"
    android:orientation="vertical">

    <include layout="@layout/toolback_with_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_bg_color"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel_product_img"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:background="@drawable/shop_bg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_above="@+id/shop_product_label"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/page_nameleaf" />

                <TextView
                    android:id="@+id/shop_product_label"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="30dp"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_parent_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/grey_bg_color"
                android:orientation="vertical"
                android:padding="5dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>