<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg_color"
    android:orientation="vertical">

    <include layout="@layout/toolback_with_back"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_bg_color"

            android:orientation="vertical">



            <RelativeLayout
                android:id="@+id/rel_product_img"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:background="@drawable/shop_bg"
                android:orientation="horizontal">



                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_above="@+id/shop_label"
                    android:src="@drawable/page_nameleaf"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/shop_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:textAllCaps="true"
                    android:text="Credit note - 025"
                    android:textColor="@color/white"
                    android:layout_above="@+id/tv_user_id_text"
                    android:textSize="22sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_margin="5dp"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CREDIT NOTE - Ref no.: 025 "
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="5"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dated: 02/Mar/2018 "
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:layout_gravity="center|end"
                        android:gravity="center|end"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:layout_weight="5"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textSize="10sp"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1696 MEHARE KRUSHI SEVA KENDRA - BORGAON MANJU"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Party's Name:"
                    android:layout_margin="5dp"
                    android:layout_weight="7"
                    android:textColor="@color/black"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ledger Account \nMAIN ROAD \nBORGAON MANJU,\nAKOLA,AKOLA \nPH : 9422863880"
                    android:layout_margin="5dp"
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GSTIN/UIN :"
                        android:layout_margin="5dp"
                        android:layout_weight="7"
                        android:textColor="@color/black"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="3"

                        android:textColor="@color/black"
                        />

                </LinearLayout>


            </LinearLayout>




        </LinearLayout>
    </ScrollView>



</LinearLayout>