<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/form_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        android:background="@color/form_background_color">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150sp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:visibility="gone"
            android:src="@drawable/ic_launcher_background"/>





        <EditText
            android:id="@+id/edt_Customer_Id"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/btn_color_white"
            android:hint="Customer Code"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:layout_gravity="center"
            android:gravity="center|start"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_Agency_Name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/btn_color_white"
            android:hint="Firm Name *"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:layout_gravity="center"
            android:gravity="center|start"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_Proprietor_Name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/btn_color_white"
            android:hint="Proprietor/Director Name *"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:layout_gravity="center"
            android:gravity="center|start"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="14sp" />





        <EditText
            android:id="@+id/edt_Mobile_Number"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/btn_color_white"
            android:hint="Mobile *"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:paddingStart="10dp"
            android:layout_gravity="center"
            android:gravity="center|start"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="14sp"
            android:maxLength="10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:gravity="center"
            android:text="MOBILE NUMBER IS YOUR USER ID."
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />



        <EditText
            android:id="@+id/Edt_Telephone"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/btn_color_white"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:paddingStart="10dp"
            android:text=""
            android:hint="Telephone No."
            android:visibility="gone"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="14sp" />


        <Button
            android:id="@+id/BtnVerifyMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:text="Verify mobile"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/primary_green"
            android:background="@drawable/cw_shadow_bg"
            android:textSize="16sp"
            android:minWidth="150sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:minHeight="50sp"
            android:layout_marginTop="40sp"
            android:layout_marginBottom="10sp"
            android:padding="10sp"/>


    </LinearLayout>



</ScrollView>
