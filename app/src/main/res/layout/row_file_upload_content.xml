<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/form_background_color"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:drawable/editbox_background_normal"
        android:orientation="horizontal"

        >


        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_margin="5dp"
                android:padding="5dp"

                >

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:text="Date:"
                    android:gravity="center|start"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView

                    android:id="@+id/row_upload_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="5sp"
                    android:layout_weight="2"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:text="05/05/2018"
                    android:gravity="center|start"
                    android:textColor="@color/wetland_logo_color"
                    android:textSize="17dp"
                    android:textStyle="bold"/>






            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="10"
                android:layout_margin="5dp"
                android:padding="5dp"

                >

                <TextView
                    android:id="@+id/File"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:text="File:"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView

                    android:id="@+id/row_upload_filename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5sp"
                    android:layout_weight="2"
                    android:cursorVisible="false"
                    android:editable="false"

                    android:gravity="center|start"
                    android:textColor="@color/wetland_logo_color"
                    android:textSize="17dp"
                    android:textStyle="bold"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:weightSum="10"

                >

                <TextView
                    android:id="@+id/FileLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:text="File Link:"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView

                    android:id="@+id/row_uploaded_file_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5sp"
                    android:layout_weight="2"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:gravity="center|start"
                    android:textColor="@color/wetland_logo_color"
                    android:textSize="13dp"
                    android:textStyle="bold"

                    />

            </LinearLayout>




        </LinearLayout>


    </LinearLayout>
</LinearLayout>